<fieldset data-hook="admin_user_addresses" id="admin_user_edit_addresses" class="alpha twelve columns">
  <legend><%= Spree.t('addresses', :scope => 'admin.user') %></legend>

  <% unless @user_addresses.blank? %>
    <table id="user_addresses">
      <thead>
        <tr class="<%= cycle('even', 'odd') %>">
          <th><%= I18n.t(:address, scope: :address_book) %></th>
          <th class="align-center"><%= I18n.t(:type, scope: :address_book) %></th>
          <th class="align-center"><%= I18n.t(:def_bill, scope: :address_book) %></th>
          <th class="align-center"><%= I18n.t(:def_ship, scope: :address_book) %></th>
          <th class="actions"></th>
        </tr>
      </thead>
      <tbody>
      <%= form_for @user, url: admin_user_update_addresses_path(@user), method: :put do |f| %>
        <% @user_addresses.each do |address| %>
          <tr class="<%= cycle('even', 'odd') %>">
            <td><%= address %></td>
            <td class="align-center">
              <% if address == @user.bill_address %>
                Billing
              <% elsif address == @user.ship_address %>
                Shipping
              <% else %>
                N/A
              <% end %>
            </td>
            <td class="align-center">
              <%= radio_button_tag 'user[bill_address_id]', address.id, address == @user.bill_address %>
            </td>
            <td class="align-center">
              <%= radio_button_tag 'user[ship_address_id]', address.id, address == @user.ship_address %>
            </td>
            <td class="actions">
              <%= link_to_edit_url admin_user_edit_address_url(@user, address), :no_text => true %>
            </td>
          </tr>
        <% end %>
        <div class="row">
          <div class="alpha twelve columns">
            <%= f.submit 'Update Default Addresses' %>
          </div>
        </div>
      <% end %>
      </tbody>
    </table>
  <% end %>
</fieldset>
